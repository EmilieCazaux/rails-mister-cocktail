<%= render 'shared/navbar' %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("Banner.jpg") %>);">
  <div class="container">
    <h1>My Gin Cocktails</h1>
    <br>


  </div>
</div>

<div class = "container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <div class="card-category">
      <%= cl_image_tag(cocktail.photo, crop: :fill, width: 400, height: 350) %>
      <div class="card-description">
       <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
       <%= link_to cocktail_path(cocktail, cocktail.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
       <i class="far fa-trash-alt"></i>
    <% end %>
     </div>
   </div>
   <% end %>
 </div>
</div>








