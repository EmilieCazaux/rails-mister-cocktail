<%= render 'shared/navbar' %>


<div class="container py-2 d-flex">
  <div class = "row ">
   <div class="col-sm-12 col-md-6 col-lg-6">
    <div style="text-align: -webkit-center";>
    <h2 class="header">My <%= @cocktail.name %></h2>

       <li><%= '60ml of Gin' %></li>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
    <i class="far fa-trash-alt"></i>
    <% end %>
    </li>

      <% end %>
    <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
    </div>

    <div class="button">
      <%= link_to 'See all of my cocktails', cocktails_path, class: "btn btn-light" %>
    </div>
  </div>

  <div class="col-sm-12 col-md-6 col-lg-6">
    <img class ="img-new-event" src= <%= @cocktail.photo %>>
  </div>
</div>
</div>



